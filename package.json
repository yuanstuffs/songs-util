{
  "name": "songs-util",
  "description": "Sync songs to another drive (/) or directory",
  "main": "dist/cli.js",
  "version": "1.1.0",
  "type": "module",
  "bin": {
    "songsutil": "./dist/cli.js"
  },
  "imports": {
    "#commands/*": "./dist/commands/*.js",
    "#utils/*": "./dist/lib/utils/*.js",
    "#lib/structures": "./dist/lib/structures/index.js",
    "#lib/*": "./dist/lib/*.js"
  },
  "scripts": {
    "build": "yarn clean && tsup",
    "watch": "yarn clean && tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier src --write",
    "update": "yarn upgrade-interactive",
    "typecheck": "tsc -b src",
    "cli": "node --enable-source-maps dist/cli.js"
  },
  "dependencies": {
    "@sapphire/pieces": "^4.4.0",
    "@sapphire/utilities": "^3.18.2",
    "colorette": "^2.0.20",
    "commander": "^14.0.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@favware/colorette-spinner": "^1.0.1",
    "@sapphire/eslint-config": "^5.0.6",
    "@sapphire/result": "^2.7.2",
    "@sapphire/ts-config": "^5.0.1",
    "@skyra/env-utilities": "^2.0.1",
    "@swc/core": "^1.11.29",
    "@types/node": "20.17.57",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "sync",
    "songs"
  ],
  "author": "yuanstuffs",
  "license": "Apache-2.0",
  "packageManager": "yarn@4.9.1"
}
